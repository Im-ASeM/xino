@model WorkPost
<main>
    <!-- بخش هدر پروژه -->
    <section class="project-header pt-120 pb-60">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <div class="project-info">
                        <span class="category mb-20">@Model.WorkCat.Name</span>
                        <h1 class="title fsz-60">@Model.Title</h1>
                        <div class="project-meta mt-40">
                            <div class="row">
                                <div class="col-lg-3 col-md-6">
                                    <div class="meta-item">
                                        <span class="label">مساحت</span>
                                        <span class="value">@Model.Scale</span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="meta-item">
                                        <span class="label">سال اجرا</span>
                                        <span class="value">@Model.Year</span>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div class="meta-item">
                                        <span class="label">محل اجرا</span>
                                        <span class="value">@Model.Location</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- گالری تصاویر -->
    <section class="project-gallery pb-100">
        <div class="container">
            @* <div class="main-image mb-50">
                <img src="@Model.Images[0]" alt="تصویر اصلی پروژه" class="img-fluid radius-10">
            </div>
            <div class="row">
                @for (int i = 1; i < Model.Images.Count; i++)
                {
                    <div class="col-lg-4 mb-30">
                        <img src="@Model.Images[i]" alt="تصویر فرعی شماره @i" class="img-fluid radius-10">
                    </div>
                }
            </div> *@
            <style>
                /* CSS */
                .ui-portfolio-st1 .portfolio-slider .item {
                    width: 100%;
                    /* یا عرض دلخواه */
                    height: 30%;
                    /* ارتفاع دلخواه */
                    overflow: hidden;
                    /* برای جلوگیری از برآمدگی عکس */
                }

                .ui-portfolio-st1 .portfolio-slider .item img {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    /* حفظ نسبت ابعاد و پر کردن فضای موجود */
                }
            </style>
            <section class="ui-portfolio-st1">
                <div class="container">
                    <div class="portfolio-slider col-lg-9 mx-auto">
                        @{
                            int i = 1;
                        }
                        @foreach (string image in Model.Images)
                        {
                            <div class="item">
                                <a href="@image" target="_blank" class="portfolio-link">
                                    <div class="img th-350">
                                        <img src="@image" alt="تصاویر شماره @i" class="img-cover radius-5">
                                    </div>
                                </a>
                            </div>
                            i++;
                        }
                    </div>
                </div>
                <!-- <img src="/assets/img/work-pat.png" alt="" class="pat w-100"> -->
            </section>
        </div>
    </section>

    <!-- توضیحات پروژه -->
    <section class="project-description pb-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="description-content">
                        <h3 class="mb-30">درباره پروژه</h3>
                        <p class="mb-20">@Model.Description</p>
                        <p class="mb-20">فضای غرفه به گونه‌ای طراحی شده که بازدیدکنندگان به راحتی بتوانند
                            محصولات را مشاهده کنند و با مشخصات فنی آنها آشنا شوند.</p>

                        <h4 class="mt-50 mb-30">ویژگی‌های غرفه</h4>
                        <ul class="feature-list">
                            <li>استفاده از نورپردازی حرفه‌ای</li>
                            <li>سیستم صوتی پیشرفته</li>
                            <li>فضای VIP برای مذاکرات تجاری</li>
                            <li>نمایشگرهای لمسی تعاملی</li>
                            <li>سازه‌های سبک و مدرن</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- پروژه‌های مشابه -->
    <section class="similar-projects pb-100">
        <div class="container">
            <h3 class="section-title mb-50">پروژه‌های مشابه</h3>
            <div class="row">
                @foreach (WorkPost work in ViewBag.otherProjects)
                {
                    <div class="col-lg-4">
                        <a href="/project/@work.Id" class="project-card">
                            <img src="@work.Images[0]" alt="پروژه @work.Title" class="img-fluid radius-10">
                            <h5 class="mt-20">@work.Title</h5>
                            <span class="category">@work.WorkCat.Name</span>
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.body.classList.add('canvas-ready');
        });
    </script>
}