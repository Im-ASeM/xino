                <!-- نمونه کار 4 - تکنولوژی -->
                

                <!-- نمونه کار 5 - پزشکی -->
                

                <!-- نمونه کار 6 - بانک -->
                

                <!-- می‌تونیم همین نمونه کارها رو با تصاویر مختلف تکرار کنیم -->
