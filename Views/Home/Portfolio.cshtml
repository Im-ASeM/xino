            </div>
        </div>
    </section>
</main>
<!--End-Contents-->

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.body.classList.add('canvas-ready');
        });
    </script>

    <!-- اضافه کردن قبل از بسته شدن body -->
    <script src="assets/js/portfolio.js"></script>
}