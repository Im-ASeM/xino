<!--Contents-->
<main>
    <!-- عنوان صفحه -->
    <div class="lg-title pt-120 pb-60">
        <h1 class="fsz-70 text-center lh-2">نمونه کارها</h1>
    </div>

    <!-- فیلترهای دسته‌بندی -->
    <div class="portfolio-filters text-center mb-60">
        <button class="filter-btn active" data-filter="all">همه</button>
        @foreach (var category in ViewBag.Categories)
        {
            <button class="filter-btn" data-filter="@category.Id">@category.Name</button>
        }
    </div>

    <!-- گرید نمونه کارها -->
    <section class="portfolio-grid">
        <div class="container">
            <div class="row portfolio-items">
                <!-- نمونه کار 1 - خودرویی -->
                @foreach (WorkPost work in ViewBag.Works)
                {
                    <div class="col-lg-6 portfolio-item" data-category="@work.WorkCatId">
                        <div class="portfolio-card">
                            <div class="portfolio-img">
                                <img src="@work.Images[0]" alt="@work.Title" class="img-fluid">
                                <div class="portfolio-overlay">
                                    <div class="overlay-content">
                                        <span class="category">@work.WorkCat.Name</span>
                                        <h3 class="title">@work.Title</h3>
                                        <div class="details">
                                            <span>مساحت: @work.Scale</span>
                                            <span>سال: @work.Year</span>
                                        </div>
                                        <a href="/project/@work.Id" class="view-project">مشاهده جزئیات</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

